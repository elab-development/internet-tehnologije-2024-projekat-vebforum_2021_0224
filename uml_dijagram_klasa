@startuml

scale 1920*1080

class Board {
	id : int
	name : String
	timestamps : DateTime
}

class Topic {
	id : int
	name : String
	timestamps : DateTime
	board_id : int
}

class Post {
	id : int
	title : String
	body : String
	timestamps : DateTime
	board_id : int
	user_id : int
}

class Comment {
	id : int
	comment_id : int
	body : String
	timestamps : DateTime
	post_id : int
	user_id : int
}

class Attachment {
	id : int
	filetype : String
	path : String
	name : String
	timestamps : DateTime
}

class User {
	id : int
	email : String
	username : String
	password : String
	timestamps : DateTime
}

class Role {
	id : int
	name : String
	timestamps : DateTime
}

class RoleUser {
	id : int
	role_id : int
	user_id : int
}

Board "1" o-- "*" Topic
Topic "1" o-- "*" Post
Post "1" o-- "*" Attachment
Post "*" -- "1" User
Post "1" o-- "*" Comment
Comment "1" o-- "*" Attachment
Comment "1" o-- "*" Comment : reply
User "*" -- "*" Role
(User, Role) .. RoleUser

@enduml
